@inject App.Services.PlanetService planetService;
@{
    ViewData["Title"] = "Planet";
}

<h1>
    Các hành tinh của hệ mặt trời
</h1>


<div class="list-group">
    @foreach (var planet in planetService) {
        <a class="list-group-item list-group-item-action" asp-action="PlanetInfor" asp-controller="Planet" asp-route-Id="@planet.Id">
            @planet.VnName - @planet.Name
        </a>
    }
</div>

